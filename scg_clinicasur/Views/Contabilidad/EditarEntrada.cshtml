@model scg_clinicasur.Models.Contabilidad

@{
    ViewData["Title"] = "Editar Ingreso";
}

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-warning"><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h1>
        <p class="lead text-muted">Modifica la información del ingreso seleccionado.</p>
    </div>

    <!-- Formulario -->
    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <form asp-action="EditarEntrada" method="post">
                <input type="hidden" asp-for="IdContabilidad" />

                <div class="row g-4">
                    <!-- Concepto -->
                    <div class="col-md-12">
                        <label for="Concepto" class="form-label fw-bold">Concepto del Ingreso</label>
                        <input asp-for="Concepto" class="form-control" placeholder="Ej. Pago de consulta, donación, etc." />
                        <span asp-validation-for="Concepto" class="text-danger"></span>
                    </div>

                    <!-- Monto -->
                    <div class="col-md-12">
                        <label for="Monto" class="form-label fw-bold">Monto (₡)</label>
                        <input asp-for="Monto" type="number" step="0.01" class="form-control" placeholder="Ej. 10000.00" />
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>

                    <!-- Fecha -->
                    <div class="col-md-12">
                        <label for="FechaRegistro" class="form-label fw-bold">Fecha del Ingreso</label>
                        <input asp-for="FechaRegistro" type="date" class="form-control" />
                        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                    </div>
                </div>

                <!-- Campo oculto para el Tipo -->
                <input asp-for="Tipo" type="hidden" value="Ingreso" />

                <!-- Botones de Acción -->
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-warning btn-lg text-white">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Historial" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}