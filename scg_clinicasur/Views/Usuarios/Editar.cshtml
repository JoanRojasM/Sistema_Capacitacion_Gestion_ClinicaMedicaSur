@model scg_clinicasur.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-primary">Editar Usuario</h1>
        <p class="lead text-muted">Actualiza la información del usuario en el sistema</p>
    </div>

    <!-- Tarjeta del Formulario -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <!-- Mensajes de validación -->
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <!-- Formulario -->
            <form method="post" asp-action="Editar" asp-route-id="@Model.id_usuario">
                <input type="hidden" asp-for="id_usuario" />

                <!-- Campo Nombre -->
                <div class="mb-3">
                    <label asp-for="nombre" class="form-label">Nombre</label>
                    <input asp-for="nombre" class="form-control" placeholder="Ingrese el nombre" />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>

                <!-- Campo Apellido -->
                <div class="mb-3">
                    <label asp-for="apellido" class="form-label">Apellido</label>
                    <input asp-for="apellido" class="form-control" placeholder="Ingrese el apellido" />
                    <span asp-validation-for="apellido" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="fecha_nacimiento" class="control-label"></label>
                    <input asp-for="fecha_nacimiento" class="form-control" type="date" />
                    <span asp-validation-for="fecha_nacimiento" class="text-danger"></span>
                </div>


                <!-- Campo Contraseña -->
                <div class="mb-3">
                    <label asp-for="contraseña" class="form-label">Contraseña</label>
                    <input asp-for="contraseña" type="password" class="form-control" placeholder="Dejar en blanco para no cambiar" />
                    <span asp-validation-for="contraseña" class="text-danger"></span>
                </div>

                <!-- Campo Correo -->
                <div class="mb-3">
                    <label asp-for="correo" class="form-label">Correo Electrónico</label>
                    <input asp-for="correo" type="email" class="form-control" placeholder="usuario@ejemplo.com" />
                    <span asp-validation-for="correo" class="text-danger"></span>
                </div>

                <!-- Campo Teléfono -->
                <div class="mb-3">
                    <label asp-for="telefono" class="form-label">Teléfono</label>
                    <input asp-for="telefono" class="form-control" placeholder="Ingrese el número de teléfono" />
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>

                <!-- Campo Rol -->
                <div class="mb-3">
                    <label asp-for="id_rol" class="form-label">Rol</label>
                    <select asp-for="id_rol" class="form-select" asp-items="ViewBag.Roles">
                        <option value="">Seleccione un rol</option>
                    </select>
                    <span asp-validation-for="id_rol" class="text-danger"></span>
                </div>

                <!-- Campo Estado -->
                <div class="mb-4">
                    <label asp-for="estado" class="form-label">Estado</label>
                    <select asp-for="estado" class="form-select" asp-items="ViewBag.Estados">
                        <option value="">Seleccione un estado</option>
                    </select>
                    <span asp-validation-for="estado" class="text-danger"></span>
                </div>

                <!-- Botones de Acción -->
                <div class="text-center">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Volver al Listado
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Actualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        // Desactivar validación del campo "contraseña" al cargar la página
        $('input[name="contraseña"]').removeAttr('data-val');
        $('input[name="contraseña"]').removeAttr('data-val-required');
    });
</script>